{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src"
    ],
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
