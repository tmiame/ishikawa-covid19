{
  "compilerOptions": {
    "types": ["node"],
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "src"
    ],
    "baseUrl": "./",
  },
  "include": ["./src/index.ts"]
}
